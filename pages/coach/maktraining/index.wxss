
page, .parent{
    width:100%;
    height:100%;
    padding:0 20rpx;
    background:#dfdfdf;
    box-sizing:border-box;
}

.section{
    background:#fff;
    padding:0 0 0 20rpx;
    margin-top:20rpx;

}
.section .item{
    display:flex;
    flex-direction:row;
    justify-content:space-between;
    border-top:1rpx solid #ececec;
    position:relative;
}
.section .item:after{
    content:'>';
    display:block;
    font:40rpx '微软雅黑';
    color:#323434;
    position:absolute;
    top:50%;
    right:22rpx;
    transform:translateY(-50%);
    
}
.section .item text{
    display:inline-block;
    font:30rpx/100rpx '微软雅黑';
    color:#323434;
}
.section .item text:nth-of-type(2){
    margin-right:70rpx;
}

button{
    background:#fff100;
    margin:80rpx auto 30rpx;
}