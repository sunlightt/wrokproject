
.head{
    padding:40rpx 4%;
    height:auto;
}
.head .title{
    display:block;
    font:40rpx/90rpx '微软雅黑';
    color:#333;
    text-align:center;
    padding-bottom:30rpx;
}
.head .msg{
    display:block;
    font:30rpx/50rpx '微软雅黑';
    color:#333;
    text-align:jusitify;
    text-indent:2em;
}
.item {
    padding:10rpx 0;
}
.item .que_title{
    display:block;
    padding:0 4%;
    font:30rpx/80rpx '微软雅黑';
    color:#333;
    text-align:left;
    background:#f1f1f1;
}
.item .impot{
    color:red;
    margin-left:20rpx;
}
.item .wrap{
    padding:30rpx 4%;
}
.item .wrap .radio{
    display:flex;
    flex-direction:row;
    margin:14rpx 0;
}
.item .wrap .radio .input{
    width:180rpx;
    border-bottom:1rpx solid #333;
    margin-left:10rpx;
    font:30rpx/52rpx '微软雅黑';
} 

.item  .mgs_input{
    width:100%;
    height:70rpx;
    border:1rpx solid #ccc;
    font:30rpx/90rpx '微软雅黑';
}

.btn{
    width:30%;
    font:30rpx/80rpx '微软雅黑';
    background:#479de6;
    color:#fff;
    margin:0 auto;
}